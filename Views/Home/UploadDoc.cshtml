@model CMCS.Models.UploadDocModel

@{
    ViewData["Title"] = "Upload Documents";
}

<h2>Upload Supporting Document</h2>

<form asp-action="UploadDoc" enctype="multipart/form-data" method="post">
    <div class="form-group">
        <label for="UploadedFile">Choose a file:</label>
        <input asp-for="UploadedFile" type="file" class="form-control" />
        <span asp-validation-for="UploadedFile" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Upload</button>
</form>

<p>@ViewBag.Message</p>
